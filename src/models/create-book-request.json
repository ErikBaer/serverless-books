{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "createBook",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "author": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "topic": 
        {"type": "string",
        "pattern": "^(?!\\s*$).+"
        },
        "unread":
        {"type": "boolean"
        },
        "coverUrl": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"}
    },
    "required": [
        "name",
        "topic",
        "unread"
    ],
    "additionalProperties": false
  }